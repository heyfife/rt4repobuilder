<Directory "@RT4_WWWDIR@">
    Options FollowSymLinks
    <IfModule mod_authz_core.c>
      # Apache 2.4
      Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
      # Apache 2.2
      Order allow,deny
      Allow from all
    </IfModule>
</Directory>

Alias /rt4 "@RT4_WWWDIR@"

<Location /rt4>
    SetHandler modperl
    PerlResponseHandler Plack::Handler::Apache2
    PerlSetVar psgi_app @RT4_BINDIR@/rt-server
</Location>
